generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String?  // Optional (farmers may not have password if wallet-only)
  username        String
  walletAddress   String?  @unique
  role            String   @default("FARMER")
  region          String?  // Optional for non-farmers
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  attestations    Attestation[]
  reputation      ReputationScore?
  authentications AuthenticatorAction[]
}

// Role enum removed for SQLite compat

model SustainablePractice {
  id           Int    @id @default(autoincrement())
  name         String @unique
  description  String
  points       Int

  attestations Attestation[]
}

model Attestation {
  id              Int               @id @default(autoincrement())
  userId          Int
  practiceId      Int
  evidenceHash    String
  imageUrl        String?           // <--- Add this
  status          String @default("PENDING")
  metadataTxHash  String?
  attestedAt      DateTime          @default(now())
  user            User              @relation(fields: [userId], references: [id])
  practice        SustainablePractice @relation(fields: [practiceId], references: [id])
  authentications AuthenticatorAction[]
}

// AttestationStatus enum removed for SQLite compat

model AuthenticatorAction {
  id            Int      @id @default(autoincrement())
  attestationId Int
  userId        Int      // Authenticator who took action
  action        String   // e.g., "approved", "rejected"
  notes         String?
  createdAt     DateTime @default(now())

  attestation   Attestation @relation(fields: [attestationId], references: [id])
  user          User        @relation(fields: [userId], references: [id])
}

model ReputationScore {
  id           Int      @id @default(autoincrement())
  score        Int      @default(0)
  tokenAsset   String?
  mintTxHash   String?

  // This line MUST have @unique to make it unique per farmer
  userId       Int      @unique

  user         User     @relation(fields: [userId], references: [id])
  updatedAt    DateTime @updatedAt
}